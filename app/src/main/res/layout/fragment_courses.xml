<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background">
    <include
        android:id="@+id/header_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/course_search"
        android:layout_marginTop="25dp"></include>
    <Button
        android:id="@+id/btn_select"
        android:layout_below="@+id/header_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:text="可选通选课程"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:background="@mipmap/availablecourse_button"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_courses"
        android:layout_below="@+id/btn_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:foregroundGravity="center">
    </android.support.v7.widget.RecyclerView>
</RelativeLayout>