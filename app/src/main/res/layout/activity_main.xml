<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.MainActivity">

    <RelativeLayout
    android:id="@+id/container_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    </RelativeLayout>
    <!--功能菜单-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/btn_viewCourses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="通选课"
            android:textColor="#ffffff"
            android:layout_weight="1"
            android:background="@drawable/menu_courses_icon_selector"
            />
        <Button
            android:id="@+id/btn_courseTable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="课表"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:background="@drawable/menu_table_iconclicked_selector"/>
        <Button
            android:id="@+id/btn_myPage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="我的"
            android:textColor="#ffffff"
            android:background="@drawable/menu_mypage_icon_selector"
            android:layout_weight="1"/>
    </LinearLayout>

</RelativeLayout>